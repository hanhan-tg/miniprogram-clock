/* components/group-task-daily/index.wxss */
.container {
  width: 650rpx;
  /* border: 1px solid red; */
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-radius: 30rpx;
  margin-top: 20rpx;
}

.header {
  margin-bottom: 20rpx;
}

.header-text {
  text-align: left;
  font-size: 45rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  padding-bottom: 10rpx;
  margin-bottom: 30rpx;
}

.content {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  border: 1rpx solid #e0e0e0;
  padding: 0 50rpx;
  border-radius: 50rpx;
  height: 80rpx;
}

.content-info {
  font-size: 30rpx;
  display: flex;
  align-items: center;
}

.content-circle {
  font-size: 80rpx;
}

.check-circle {
  color: green;
}

.circle {
  color: rgba(0, 0, 0, .1)
}