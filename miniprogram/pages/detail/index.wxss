/* pages/detail/index.wxss */
.detail-container {
  /* width: 650rpx; */
  background-color: #fff;
  margin-top: 20rpx;
  padding: 50rpx 30rpx;
  margin: 20rpx 50rpx 0;
  border-radius: 30rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 35rpx;
  height: 70rpx;
  padding: 0 20rpx;
  /* border-bottom: 1rpx solid rgba(0, 0, 0, .07); */
}

.commonts, .more10 {
  padding: 0 20rpx;
  font-size: 35rpx;
  margin-top: 20rpx;
}
.more10-text {
  text-indent: 50rpx;
  margin-top: 10rpx;
  margin-bottom: 30rpx;
  /* text-align: right; */
}

.textarea {
  width: 100%;
  box-sizing: border-box;
  border: 1px solid rgba(0, 0, 0, .1);
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  color: rgba(0, 0, 0, 0.7);
  border-radius: 30rpx;
}
.btn {
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 15rpx;
}