/* pages/createdGroup/index.wxss */

.created-group-container {
  margin: 20rpx 30rpx 0;
}

.group {
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 30rpx;
}
.no-group {
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 30rpx;
  text-align: center;
  color: rgba(0, 0, 0, .3);
}
.group-title {
  font-size: 50rpx;
  /* text-align: center; */
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, .07);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.group-id {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 10rpx 0 0;
  color: rgba(0, 0, 0, .3)
}
.group-id-text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.group-id-copy {
  margin-left: 20rpx;
}
.group-top {
  margin-bottom: 10rpx;
}

.label {
  font-size: 35rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.name {
  padding-left: 50rpx;
  font-size: 35rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.setting {
  /* height: 500rpx; */
  background-color: #fff;
  border-top-right-radius: 30rpx;
  border-top-left-radius: 30rpx;
  padding: 30rpx 50rpx;
}

.setting-text {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
}
.hover {
  background-color: gray;
}


.create-group-name {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.item-text-input {
  width: 350rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  color: rgba(0, 0, 0, .5);
  font-size: 10rpx;
}
.create-group-description{
  text-align: left;
}
.item-text {
  margin-bottom: 10rpx;
}
.item-textarea {
  width: 100%;
  box-sizing: border-box;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  color: rgba(0, 0, 0, .5);
}